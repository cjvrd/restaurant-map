datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@db:5432/postgres"
}

generator kysely {
    provider = "prisma-kysely"
    output   = "../"
    fileName = "types.ts"
}

model Restaurant {
    id           Int      @id @default(autoincrement())
    created_time DateTime @default(now())
    updated_time DateTime @updatedAt
    status       status   @default(ENABLED)
    name         String
    address      String?
    coordinates  Json? // { lng: 0.0, lat: 0.0 }
    phone        String?
    website      String?
    description  String?
}

enum status {
    ENABLED
    DISABLED
    DELETED
}
